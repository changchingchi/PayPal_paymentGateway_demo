<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
  >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buy BT button"
        android:id="@+id/braintreeSubmit"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/pp_buynow"
        android:layout_alignEnd="@+id/pp_buynow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/serverURL"
        android:layout_below="@+id/braintreeSubmit"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pp_buynow"
        android:background="@drawable/button_custom"
        android:layout_above="@+id/braintreeSubmit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="86dp" />


</RelativeLayout>
